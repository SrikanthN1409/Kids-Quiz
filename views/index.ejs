<!-- Button to trigger -->



<!-- Fullscreen Popup -->
<dialog id="slateDialog" class="fullscreen-popup">
  <div id="languageSelect">
    <h2>Welcome to My Slate!</h2>
    <p>Choose a language to start practicing your handwriting.</p>
    <button class="lang-btn" data-lang="english">English</button>
    <button class="lang-btn" data-lang="hindi">Hindi</button>
    <button class="lang-btn" data-lang="telugu">Telugu</button>
    <button class="lang-btn" data-lang="kannada">Kannada</button>
    <button class="lang-btn" data-lang="tamil">Tamil</button>
    <button class="lang-btn" data-lang="malayalam">Malayalam</button>
    <button class="lang-btn" data-lang="oriya">Oriya</button>
    <button class="lang-btn" data-lang="bengali">Bengali</button>
    <button class="lang-btn" data-lang="gujarati">Gujarati</button>
    <button class="lang-btn" data-lang="assamese">Assamese</button> 
  
  
    <br><br>
    <button id="closeSlate">❌ Close</button>
  </div>

  <div id="slateContent" hidden>
    <div id="progressDisplay" style="margin: 10px 0; font-weight: bold;"></div>
    <h2 id="letterPrompt">Draw the letter: A</h2>

    <div id="progressArea">
      <p id="progressStatus">Progress: 0%</p>
      <progress id="progressBar" max="100" value="0"></progress>
    </div>

    <img id="letterImage" src="" alt="⚠️ Image failed to load" style="max-height: 150px;" />

    <div style="position: relative; display: inline-block;">
      <button id="prevLetterBtn">⬅️ Previous Letter</button>
      <button id="nextLetterBtn">Next Letter ➡️</button>
      <button id="speakLetterBtn">🔊 Speak</button>
      <button id="hintIcon" title="Hint: See sample image for this language">💡</button>

      <!-- Hint image container shown on hover -->
      <div id="hintImageContainer" style="
        position: absolute;
        top: 40px;
        left: 0;
        display: none;
        background: #fff;
        border: 1px solid #ccc;
        padding: 5px;
        z-index: 10;
        box-shadow: 0 2px 6px rgba(0,0,0,0.2);
      ">
        <img id="referenceImage" src="" alt="Letter Reference" style="height: 250px;">
      </div>
    </div>

    <canvas id="slateCanvas" width="350" height="350" style="margin-top: 10px;"></canvas>

    <button id="checkDrawing">Validate Alphabet</button>
    <button id="clearDrawing">🧽 Clear</button>
    <button id="closeSlateContent">Close</button>
    <p id="drawingResult" class="feedback-box"></p>
    <audio id="voiceInstruction" preload="auto"></audio>

    <h6>Note:
      <p>* Uses OCR (Tesseract.js) to recognize handwriting and provide real-time accuracy feedback.</p>
      <p>* Prototype: Fine-tuning for handwriting is ongoing and will improve in next release.</p>
    </h6>
  </div>
</dialog>

<!-- Quiz Dialog -->
<dialog id="quiz">
  <form method="dialog">
    <h2 id="question"></h2>
    <ul id="choices"></ul>
    <button id="quit" type="button">Quit</button>
  </form>
</dialog>

<dialog id="result">
  <h2>Quiz Complete!</h2>
  <p>Your Score: <span id="score"></span></p>
  <button id="home">Home</button>
</dialog>
